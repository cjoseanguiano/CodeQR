<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devix.codeqr_chat_bsd.com.devix.codeqr.MainActivity">

    <Button
        android:id="@+id/btnLector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGenerator"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnGenerator"
        android:layout_marginTop="115dp"
        android:background="@color/colorPrimary"
        android:text="@string/TitleReader"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnGenerator"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLector"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/TitleGenerator"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/btnAnexo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGenerator"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Anexo"
        android:textColor="#fff"/>
</RelativeLayout>
